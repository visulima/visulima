{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "types": ["vinxi/types/client"],
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
