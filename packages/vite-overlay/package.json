{
    "name": "@visulima/vite-overlay",
    "version": "0.0.0",
    "description": "Improved vite overlay",
    "keywords": [
        "visulima",
        "vite-overlay"
    ],
    "homepage": "https://visulima.com/packages/vite-overlay",
    "bugs": {
        "url": "https://github.com/visulima/visulima/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/visulima.git",
        "directory": "packages/vite-overlay"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md"
    ],
    "scripts": {
        "build": "cross-env NODE_ENV=development packem build",
        "build:prod": "cross-env NODE_ENV=production packem build",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:package-json": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug"
    },
    "dependencies": {
        "@jridgewell/trace-mapping": "^0.3.31",
        "@shikijs/langs": "^3.12.2",
        "@shikijs/themes": "^3.12.2",
        "@visulima/boxen": "workspace:*",
        "@visulima/error": "workspace:*",
        "shiki": "^3.12.2"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.3.0",
        "@anolilab/prettier-config": "^6.0.4",
        "@anolilab/semantic-release-pnpm": "2.0.3",
        "@anolilab/semantic-release-preset": "^11.0.3",
        "@arethetypeswrong/cli": "^0.18.2",
        "@babel/core": "^7.28.4",
        "@eslint/css": "0.11.0",
        "@secretlint/secretlint-rule-preset-recommend": "^11.2.4",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/node": "^4.1.13",
        "@tailwindcss/oxide": "^4.1.13",
        "@tailwindcss/typography": "^0.5.16",
        "@total-typescript/ts-reset": "^0.6.1",
        "@playwright/test": "^1.55.0",
        "@types/node": "24.5.1",
        "@visulima/packem": "2.0.0-alpha.20",
        "@visulima/path": "workspace:*",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cross-env": "^10.0.0",
        "cssnano": "7.1.1",
        "esbuild": "^0.25.9",
        "eslint": "9.35.0",
        "lucide-static": "^0.544.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "0.6.14",
        "rimraf": "^6.0.1",
        "secretlint": "11.2.4",
        "semantic-release": "^24.2.8",
        "tailwindcss": "^4.1.13",
        "typescript": "^5.9.2",
        "vite": "^7.1.5",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=20.18 <=24.x"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
