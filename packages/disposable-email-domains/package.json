{
    "name": "@visulima/disposable-email-domains",
    "version": "1.0.0-alpha.1",
    "description": "A regularly updated list of disposable and temporary email domains.",
    "keywords": [
        "visulima",
        "disposable-email-domains"
    ],
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "homepage": "https://visulima.com/packages/disposable-email-domains",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./domains": {
            "default": "./dist/domains.json"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/visulima.git",
        "directory": "packages/disposable-email-domains"
    },
    "bugs": {
        "url": "https://github.com/visulima/visulima/issues"
    },
    "scripts": {
        "build": "packem build --development && pnpm run generate:domains",
        "build:prod": "packem build --production && pnpm run generate:domains",
        "clean": "rimraf node_modules dist .eslintcache",
        "generate:domains": "node ./scripts/sync-domains.js",
        "dev": "pnpm run build --watch",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --cache --concurrency auto --fix",
        "lint:package-json": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit --project tsconfig.json",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.4.4",
        "@anolilab/semantic-release-pnpm": "3.1.0",
        "@anolilab/semantic-release-preset": "12.0.1",
        "@arethetypeswrong/cli": "^0.18.2",
        "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "24.10.1",
        "@visulima/packem": "2.0.0-alpha.40",
        "@visulima/tabular": "3.1.3",
        "@vitest/coverage-v8": "^4.0.15",
        "@vitest/ui": "^4.0.15",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "email-providers": "2.18.0",
        "esbuild": "^0.27.0",
        "eslint": "9.39.1",
        "prettier": "^3.7.4",
        "publint": "^0.3.15",
        "rimraf": "^6.1.2",
        "secretlint": "11.2.5",
        "semantic-release": "^25.0.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    },
    "engines": {
        "node": ">=22.12 <=25.x"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
