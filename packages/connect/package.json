{
    "name": "@visulima/connect",
    "version": "3.0.20",
    "description": "The minimal router and middleware layer for Next.js, Micro, Vercel, or Node.js http/http2 with support for zod validation.",
    "keywords": [
        "javascript",
        "nextjs",
        "middleware",
        "router",
        "connect",
        "vercel",
        "node",
        "http",
        "http2",
        "zod"
    ],
    "homepage": "https://www.visulima.com/docs/package/connect",
    "bugs": {
        "url": "https://github.com/visulima/visulima/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/visulima/visulima.git",
        "directory": "packages/connect"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "typesVersions": {
        ">=5.0": {
            ".": [
                "./dist/index.d.ts"
            ]
        }
    },
    "files": [
        "dist/**",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md"
    ],
    "scripts": {
        "build": "packem build --development",
        "build:prod": "packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint . --cache --concurrency auto ",
        "lint:eslint:fix": "eslint . --cache --concurrency auto  --fix",
        "lint:package-json": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "dependencies": {
        "http-errors": "^2.0.0",
        "regexparam": "^3.0.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.3.3",
        "@anolilab/prettier-config": "^6.0.6",
        "@anolilab/semantic-release-pnpm": "^2.0.4",
        "@anolilab/semantic-release-preset": "^11.0.4",
        "@arethetypeswrong/cli": "^0.18.2",
        "@babel/core": "^7.28.4",
        "@types/http-errors": "^2.0.5",
        "@types/node": "24.7.2",
        "@visulima/nextra-theme-docs": "4.0.26",
        "@visulima/packem": "1.28.3",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "esbuild": "0.25.10",
        "eslint": "9.37.0",
        "eslint-plugin-zod": "^1.4.0",
        "express": "^5.1.0",
        "fastify": "^5.6.1",
        "isomorphic-fetch": "^3.0.0",
        "prettier": "^3.6.2",
        "publint": "^0.3.14",
        "rimraf": "6.0.1",
        "semantic-release": "24.2.9",
        "typescript": "5.9.3",
        "vitest": "^3.2.4",
        "zod": "^4.1.12"
    },
    "peerDependencies": {
        "zod": "^3.22.4"
    },
    "engines": {
        "node": ">=18.0.0 <=24.x"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
