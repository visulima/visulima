{
    "name": "@visulima/tabular",
    "version": "3.1.3",
    "description": "Create beautiful ASCII tables and grids with customizable borders, padding, and alignment. Supports Unicode, colors, and ANSI escape codes.",
    "keywords": [
        "cli",
        "table",
        "grid",
        "tabular",
        "terminal",
        "console",
        "ascii",
        "unicode",
        "alignment",
        "ansi",
        "visulima"
    ],
    "homepage": "https://visulima.com/packages/tabular",
    "bugs": {
        "url": "https://github.com/visulima/visulima/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/visulima.git",
        "directory": "packages/terminal/tabular"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./style": {
            "types": "./dist/style.d.ts",
            "default": "./dist/style.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "CHANGELOG.md",
        "README.md",
        "dist"
    ],
    "scripts": {
        "build": "packem build --development",
        "build:prod": "packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint . --cache --concurrency auto",
        "lint:eslint:fix": "eslint . --cache --concurrency auto --fix",
        "lint:package-json": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit",
        "lint:types:tabular": "pnpm --filter \"tabular\" run lint:types",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:coverage:tabular": "pnpm --filter \"tabular\" run test:coverage",
        "test:tabular": "pnpm --filter \"tabular\" run test",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:ui:tabular": "pnpm --filter \"tabular\" run test:ui",
        "test:watch": "vitest"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.4.4",
        "@anolilab/prettier-config": "6.0.8",
        "@anolilab/semantic-release-pnpm": "3.1.0",
        "@anolilab/semantic-release-preset": "^12.0.1",
        "@arethetypeswrong/cli": "^0.18.2",
        "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "24.10.1",
        "@visulima/colorize": "1.4.29",
        "@visulima/packem": "2.0.0-alpha.40",
        "@visulima/string": "2.0.6",
        "@vitest/coverage-v8": "^4.0.15",
        "@vitest/ui": "^4.0.15",
        "ansi-regex": "^6.2.2",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "esbuild": "^0.27.0",
        "eslint": "9.39.1",
        "jiti": "2.6.1",
        "publint": "^0.3.15",
        "rimraf": "^6.1.2",
        "secretlint": "11.2.5",
        "semantic-release": "^25.0.2",
        "terminal-size": "4.0.0",
        "type-fest": "^5.3.0",
        "typedoc": "0.28.15",
        "typedoc-plugin-markdown": "4.9.0",
        "typedoc-plugin-rename-defaults": "0.7.3",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    },
    "engines": {
        "node": ">=22.12 <=25.x"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
