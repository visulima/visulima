{
    "name": "@visulima/flame",
    "version": "0.0.0",
    "description": "A Powerful Error Response System For Both Development And Production.",
    "keywords": [
        "visulima",
        "anolilab",
        "error",
        "exception",
        "exceptions",
        "whoops",
        "youch",
        "error-handler",
        "error-handler-middleware",
        "error-overlay",
        "vite",
        "webpack",
        "error-reporting",
        "code-frame",
        "codeframe",
        "bug",
        "reporting",
        "stacktrace",
        "diagnostic",
        "source-code-preview",
        "cli",
        "console"
    ],
    "homepage": "https://www.visulima.com/docs/package/flame",
    "repository": {
        "type": "git",
        "url": "https://github.com/visulima/visulima.git",
        "directory": "packages/flame"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": true,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./displayer/cli": {
            "import": {
                "types": "./dist/displayer/cli-displayer.d.mts",
                "default": "./dist/displayer/cli-displayer.mjs"
            },
            "require": {
                "types": "./dist/displayer/cli-displayer.d.cts",
                "default": "./dist/displayer/cli-displayer.cjs"
            }
        },
        "./displayer/http": {
            "import": {
                "types": "./dist/displayer/http-displayer.d.mts",
                "default": "./dist/displayer/http-displayer.mjs"
            },
            "require": {
                "types": "./dist/displayer/http-displayer.d.cts",
                "default": "./dist/displayer/http-displayer.cjs"
            }
        },
        "./vite": {
            "import": {
                "types": "./dist/vite/error-overlay-plugin.d.mts",
                "default": "./dist/vite/error-overlay-plugin.mjs"
            },
            "require": {
                "types": "./dist/vite/error-overlay-plugin.d.cts",
                "default": "./dist/vite/error-overlay-plugin.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "types": "dist/index.d.ts",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "typesVersions": {
        "*": [
            "dist/index.d.ts"
        ]
    },
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md"
    ],
    "scripts": {
        "build": "packem build --development",
        "build:prod": "packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev:node": "packem build --development --watch --onSuccess 'node ./examples/node/index.js'",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:package-json": "publint --strict",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@visulima/error": "workspace:*",
        "@visulima/find-cache-dir": "workspace:*",
        "@visulima/css-style-inject": "1.0.0-alpha.4",
        "get-uri": "^6.0.5",
        "@jridgewell/trace-mapping": "^0.3.25",
        "diff": "^8.0.2",
        "htmldiff-js": "^1.0.5"
    },
    "devDependencies": {
        "lucide-static": "^0.539.0",
        "@anolilab/eslint-config": "^16.2.23",
        "@anolilab/semantic-release-preset": "^11.0.3",
        "@babel/core": "^7.28.0",
        "@eslint/css": "0.10.0",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/postcss": "4.1.11",
        "@tailwindcss/typography": "^0.5.16",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "24.2.1",
        "@types/sanitize-html": "^2.16.0",
        "@visulima/packem": "2.0.0-alpha.8",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^10.0.0",
        "cssnano": "7.1.0",
        "esbuild": "0.25.8",
        "eslint": "^9.33.0",
        "icss-utils": "5.1.0",
        "marked": "^16.1.2",
        "open-editor": "^5.1.0",
        "openai": "5.12.2",
        "postcss": "^8.5.6",
        "postcss-focus-visible": "^10.0.1",
        "postcss-load-config": "6.0.1",
        "postcss-modules-extract-imports": "3.1.0",
        "postcss-modules-local-by-default": "4.2.0",
        "postcss-modules-scope": "3.2.1",
        "postcss-modules-values": "4.0.0",
        "postcss-value-parser": "4.2.0",
        "rimraf": "^6.0.1",
        "sanitize-html": "^2.17.0",
        "semantic-release": "^24.2.7",
        "shiki": "^3.9.2",
        "sort-package-json": "^3.4.0",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.9.2",
        "vite": "^7.1.1",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "clipboard": "^2.0.11",
        "marked": "^11.0.0",
        "open-editor": "^4.1.1",
        "ai": "^4.0.0",
        "@ai-sdk/openai": "^1.0.0",
        "@ai-sdk/anthropic": "^1.0.0",
        "@ai-sdk/google": "^1.0.0",
        "@ai-sdk/mistral": "^1.0.0",
        "@ai-sdk/ollama": "^1.0.0",
        "@ai-sdk/azure": "^1.0.0",
        "sanitize-html": "^2.11.0",
        "shiki": "^3.4.0",
        "vite": "^7.1.1"
    },
    "peerDependenciesMeta": {
        "ai": { "optional": true },
        "@ai-sdk/openai": { "optional": true },
        "@ai-sdk/anthropic": { "optional": true },
        "@ai-sdk/google": { "optional": true },
        "@ai-sdk/mistral": { "optional": true },
        "@ai-sdk/ollama": { "optional": true },
        "@ai-sdk/azure": { "optional": true },
        "marked": {
            "optional": true
        },
        "clipboard": {
            "optional": true
        },
        "open-editor": {
            "optional": true
        },
        "sanitize-html": {
            "optional": true
        },
        "shiki": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=18.* <=21.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
