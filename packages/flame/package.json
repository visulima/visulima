{
    "name": "@visulima/flame",
    "version": "0.0.0",
    "description": "A Powerful Error Response System For Both Development And Production.",
    "keywords": [
        "visulima",
        "anolilab",
        "error",
        "exception",
        "exceptions",
        "whoops",
        "youch",
        "error-handler",
        "error-handler-middleware",
        "error-overlay",
        "vite",
        "webpack",
        "error-reporting",
        "code-frame",
        "codeframe",
        "bug",
        "reporting",
        "stacktrace",
        "diagnostic",
        "source-code-preview",
        "cli",
        "console"
    ],
    "homepage": "https://www.visulima.com/docs/package/flame",
    "repository": {
        "type": "git",
        "url": "https://github.com/visulima/visulima.git",
        "directory": "packages/flame"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": true,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./displayer/cli": {
            "import": {
                "types": "./dist/cli-displayer.d.ts",
                "default": "./dist/cli-displayer.js"
            }
        },
        "./displayer/http": {
            "import": {
                "types": "./dist/http-displayer.d.ts",
                "default": "./dist/http-displayer.js"
            }
        },
        "./package.json": "./package.json"
    },
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md"
    ],
    "scripts": {
        "build": "rimraf dist && cross-env NODE_ENV=development tsup",
        "build:prod": "rimraf dist && cross-env NODE_ENV=production tsup",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "cross-env NODE_ENV=development tsup --watch --onSuccess 'node ./example/index.js'",
        "lint:eslint": "eslint . --ext js,cjs,mjs,jsx,ts,tsx,json,yaml,yml,md,mdx --max-warnings=0 --config .eslintrc.cjs",
        "lint:eslint:fix": "eslint . --ext js,cjs,mjs,jsx,ts,tsx,json,yaml,yml,md,mdx --max-warnings=0 --config .eslintrc.cjs --fix",
        "lint:packagejson": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit --project tsconfig.json",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest",
        "types": "tsup --dts-only",
        "types:check": "tsc --noEmit"
    },
    "dependencies": {
        "@visulima/error": "workspace:*",
        "get-uri": "^6.0.3"
    },
    "devDependencies": {
        "find-cache-dir": "^5.0.0",
        "marked": "^14.1.2",
        "sanitize-html": "^2.13.0",
        "shikiji": "^0.10.2",
        "open-editor": "^5.0.0",
        "clipboard": "^2.0.11",
        "@anolilab/eslint-config": "^15.0.3",
        "@anolilab/prettier-config": "^5.0.14",
        "@anolilab/semantic-release-preset": "^9.0.0",
        "@babel/core": "^7.25.2",
        "@eslint-types/deprecation": "^2.0.0",
        "@eslint-types/import": "^2.29.1",
        "@eslint-types/jsdoc": "^48.2.2",
        "@eslint-types/typescript-eslint": "^7.5.0",
        "@eslint-types/unicorn": "^52.0.0",
        "@rushstack/eslint-plugin-security": "^0.8.2",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/command-line-args": "^5.2.3",
        "@types/node": "22.5.4",
        "@types/sanitize-html": "^2.13.0",
        "@visulima/nextra-theme-docs": "4.0.26",
        "@vitest/coverage-v8": "^2.1.1",
        "chalk": "^5.3.0",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "esbuild-plugin-inline-import": "1.1.0",
        "eslint": "^8.54.0",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
        "eslint-plugin-mdx": "^3.1.5",
        "eslint-plugin-vitest": "^0.4.1",
        "eslint-plugin-vitest-globals": "^1.5.0",
        "lucide-static": "^0.441.0",
        "openai": "4.61.0",
        "postcss": "^8.4.45",
        "postcss-cli": "^11.0.0",
        "postcss-focus-visible": "^10.0.0",
        "postcss-import": "^16.1.0",
        "postcss-lightningcss": "1.0.1",
        "preline": "^2.4.1",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "semantic-release": "^24.1.1",
        "sort-package-json": "^2.10.1",
        "tailwindcss": "^3.4.11",
        "tsup": "^8.2.4",
        "typescript": "^5.6.2",
        "vitest": "^2.1.1"
    },
    "peerDependencies": {
        "find-cache-dir": "^5.0.0",
        "openai": "4.20.1",
        "marked": "^11.0.0",
        "clipboard": "^2.0.11",
        "sanitize-html": "^2.11.0",
        "shikiji": "^0.7.5",
        "open-editor": "^4.1.1"
    },
    "peerDependenciesMeta": {
        "find-cache-dir": {
            "optional": true
        },
        "openai": {
            "optional": true
        },
        "marked": {
            "optional": true
        },
        "clipboard": {
            "optional": true
        },
        "open-editor": {
            "optional": true
        },
        "sanitize-html": {
            "optional": true
        },
        "shikiji": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=18.* <=21.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "anolilab": {
        "eslint-config": {
            "plugin": {
                "tsdoc": false,
                "etc": false
            },
            "warn_on_unsupported_typescript_version": false,
            "info_on_disabling_jsx_react_rule": false,
            "info_on_disabling_prettier_conflict_rule": false,
            "info_on_disabling_jsonc_sort_keys_rule": false,
            "info_on_disabling_etc_no_deprecated": false
        }
    },
    "sources": [
        "src/displayer/cli-displayer.ts",
        "src/displayer/http-displayer.ts"
    ]
}
