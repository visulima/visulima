        "@visulima/error": "5.0.6",
        "@visulima/packem": "2.0.0-alpha.37",
        "@vitest/coverage-v8": "^4.0.13",
        "@vitest/ui": "^4.0.13",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "esbuild": "^0.27.0",
        "eslint": "9.39.1",
        "prettier": "^3.6.2",
        "publint": "^0.3.15",
        "rimraf": "^6.1.2",
        "secretlint": "11.2.5",
        "semantic-release": "^25.0.2",
        "test-runner": "0.11.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.13"
    },
    "engines": {
        "node": ">=20.19 <=25.x"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
