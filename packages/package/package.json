{
    "name": "@visulima/package",
    "version": "4.0.1",
    "description": "A comprehensive package management utility that helps you find root directories, monorepos, package managers, and parse package.json files with advanced features like catalog resolution.",
    "keywords": [
        "anolilab",
        "find",
        "find-monorepo-root",
        "find-up-pkg",
        "find-package-manager",
        "mono-repo",
        "monorepo",
        "package",
        "package-json",
        "package-manager",
        "package.json",
        "packages",
        "pkg-dir",
        "pkg-manager",
        "pkg-types",
        "pkg-up",
        "read-pkg",
        "read-pkg-up",
        "root",
        "pnpm",
        "bun",
        "npm",
        "yarn",
        "visulima"
    ],
    "homepage": "https://www.visulima.com/docs/package/package",
    "bugs": {
        "url": "https://github.com/visulima/visulima/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/visulima.git",
        "directory": "packages/package"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./monorepo": {
            "types": "./dist/monorepo.d.ts",
            "default": "./dist/monorepo.js"
        },
        "./package": {
            "types": "./dist/package.d.ts",
            "default": "./dist/package.js"
        },
        "./package-json": {
            "types": "./dist/package-json.d.ts",
            "default": "./dist/package-json.js"
        },
        "./package-manager": {
            "types": "./dist/package-manager.d.ts",
            "default": "./dist/package-manager.js"
        },
        "./pnpm": {
            "types": "./dist/pnpm.d.ts",
            "default": "./dist/pnpm.js"
        },
        "./error": {
            "types": "./dist/error.d.ts",
            "default": "./dist/error.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist/**",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md"
    ],
    "scripts": {
        "build": "packem build --development",
        "build:prod": "packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "packem build --development --watch",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:package-json": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "dependencies": {
        "yaml": "^2.8.1",
        "@antfu/install-pkg": "^1.1.0",
        "@inquirer/confirm": "^5.1.18",
        "@visulima/fs": "3.1.9",
        "@visulima/path": "1.4.0",
        "normalize-package-data": "^8.0.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.3.0",
        "@anolilab/prettier-config": "^6.0.4",
        "@anolilab/semantic-release-pnpm": "^2.0.4",
        "@anolilab/semantic-release-preset": "^11.0.4",
        "@arethetypeswrong/cli": "^0.18.2",
        "@babel/core": "^7.28.4",
        "@inquirer/core": "^10.2.2",
        "@inquirer/type": "^3.0.8",
        "@pnpm/exe": "^10.17.1",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "24.6.1",
        "@types/normalize-package-data": "^2.4.4",
        "@visulima/packem": "^2.0.0-alpha.22",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "@yarnpkg/pnp": "4.1.2",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "dot-prop": "^10.0.0",
        "esbuild": "0.25.10",
        "eslint": "9.36.0",
        "execa": "^9.6.0",
        "npm": "^11.6.1",
        "prettier": "^3.6.2",
        "publint": "^0.3.13",
        "rimraf": "6.0.1",
        "semantic-release": "24.2.9",
        "tempy": "^3.1.0",
        "type-fest": "^5.0.1",
        "typescript": "5.9.3",
        "vitest": "^3.2.4",
        "yarn": "^1.22.22"
    },
    "engines": {
        "node": ">=20.19 <=24.*"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
