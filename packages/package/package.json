{
    "name": "@visulima/package",
    "version": "1.2.10",
    "description": "One Package to rule them all, finds your root-dir, monorepo, package manager or tsconfig.json",
    "keywords": [
        "anolilab",
        "package",
        "pkg-types",
        "find-up-pkg",
        "read-pkg",
        "read-pkg-up",
        "read-tsconfig",
        "tsconfig",
        "get-tsconfig",
        "find-monorepo-root",
        "pkg-up",
        "pkg-dir",
        "package-json",
        "package.json",
        "tsconfig.json",
        "packages",
        "monorepo",
        "pkg-manager",
        "package-manager",
        "find",
        "root"
    ],
    "homepage": "https://www.visulima.com/docs/package/package",
    "repository": {
        "type": "git",
        "url": "https://github.com/visulima/visulima.git",
        "directory": "packages/package"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            },
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./monorepo": {
            "require": {
                "types": "./dist/monorepo.d.cts",
                "default": "./dist/monorepo.cjs"
            },
            "import": {
                "types": "./dist/monorepo.d.ts",
                "default": "./dist/monorepo.js"
            }
        },
        "./package": {
            "require": {
                "types": "./dist/package.d.cts",
                "default": "./dist/package.cjs"
            },
            "import": {
                "types": "./dist/package.d.ts",
                "default": "./dist/package.js"
            }
        },
        "./package-json": {
            "require": {
                "types": "./dist/package-json.d.cts",
                "default": "./dist/package-json.cjs"
            },
            "import": {
                "types": "./dist/package-json.d.ts",
                "default": "./dist/package-json.js"
            }
        },
        "./package-manager": {
            "require": {
                "types": "./dist/package-manager.d.cts",
                "default": "./dist/package-manager.cjs"
            },
            "import": {
                "types": "./dist/package-manager.d.ts",
                "default": "./dist/package-manager.js"
            }
        },
        "./tsconfig": {
            "require": {
                "types": "./dist/tsconfig.d.cts",
                "default": "./dist/tsconfig.cjs"
            },
            "import": {
                "types": "./dist/tsconfig.d.ts",
                "default": "./dist/tsconfig.js"
            }
        },
        "./package.json": "./package.json"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md"
    ],
    "scripts": {
        "build": "cross-env NODE_ENV=development tsup",
        "build:prod": "cross-env NODE_ENV=production tsup",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:eslint": "eslint . --ext js,cjs,mjs,jsx,ts,tsx,json,yaml,yml,md,mdx --max-warnings=0 --config .eslintrc.cjs",
        "lint:eslint:fix": "pnpm run lint:eslint --fix",
        "lint:packagejson": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@visulima/fs": "workspace:*",
        "get-tsconfig": "^4.7.3",
        "normalize-package-data": "^6.0.0",
        "type-fest": "^4.12.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^15.0.3",
        "@anolilab/prettier-config": "^5.0.14",
        "@anolilab/semantic-release-preset": "^8.0.3",
        "@babel/core": "^7.24.0",
        "@pnpm/exe": "^8.15.4",
        "@rushstack/eslint-plugin-security": "^0.8.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/node": "18.18.14",
        "@vitest/coverage-v8": "^1.3.1",
        "@vitest/ui": "^1.3.1",
        "cnpm": "^9.4.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-etc": "^2.0.3",
        "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
        "eslint-plugin-mdx": "^3.1.5",
        "eslint-plugin-tsdoc": "^0.2.17",
        "eslint-plugin-vitest": "^0.3.25",
        "eslint-plugin-vitest-globals": "^1.4.0",
        "execa": "^8.0.1",
        "npm": "^10.5.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "semantic-release": "^23.0.2",
        "sort-package-json": "^2.8.0",
        "tempy": "^3.1.0",
        "tsup": "^8.0.2",
        "typescript": "^5.4.2",
        "vitest": "^1.3.1",
        "which-pm-runs": "file:",
        "yarn": "^1.22.22"
    },
    "engines": {
        "node": ">=18.* <=21.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "anolilab": {
        "eslint-config": {
            "warn_on_unsupported_typescript_version": false,
            "info_on_disabling_jsx_react_rule": false,
            "info_on_disabling_prettier_conflict_rule": false,
            "info_on_disabling_jsonc_sort_keys_rule": false,
            "info_on_disabling_etc_no_deprecated": false
        }
    },
    "sources": [
        "src/index.ts",
        "src/monorepo.ts",
        "src/package.ts",
        "src/package-json.ts",
        "src/package-manager.ts",
        "src/tsconfig.ts"
    ]
}
