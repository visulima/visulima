{
    "name": "@visulima/cerebro-tui",
    "version": "0.0.0",
    "description": "A delightful toolkit for building Node-powered CLIs.",
    "keywords": [
        "terminal",
        "ansi",
        "cli",
        "interactive",
        "cli-table",
        "tui"
    ],
    "homepage": "https://visulima.com/packages/cerebro-ui",
    "repository": {
        "type": "git",
        "url": "https://github.com/visulima/visulima.git",
        "directory": "packages/cerebro-tui"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./package.json": "./package.json"
    },
    "source": "src/index.ts",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md"
    ],
    "scripts": {
        "build": "rimraf dist && cross-env NODE_ENV=development tsup",
        "build:prod": "rimraf dist && cross-env NODE_ENV=production tsup",
        "clean": "rimraf node_modules dist .eslintcache",
        "coverage": "vitest run --coverage",
        "dev": "pnpm run build --watch",
        "lint:eslint": "eslint . --ext js,cjs,mjs,jsx,ts,tsx,json,yaml,yml,md,mdx --max-warnings=0 --config .eslintrc.cjs",
        "lint:eslint:fix": "eslint . --ext js,cjs,mjs,jsx,ts,tsx,json,yaml,yml,md,mdx --max-warnings=0 --config .eslintrc.cjs --fix",
        "lint:packagejson": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit --project tsconfig.json",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@inquirer/prompts": "^3.3.0",
        "boxen": "^7.1.1",
        "chalk": "^5.3.0",
        "chalk-template": "^1.1.0",
        "cli-progress": "^3.12.0",
        "cli-table3": "^0.6.3",
        "cli-truncate": "^4.0.0",
        "ora": "^7.0.1",
        "string-width": "^7.0.0",
        "strip-ansi": "^7.1.0",
        "supports-hyperlinks": "^3.0.0",
        "term-size": "^3.0.2",
        "terminal-link": "^3.0.0",
        "wordwrap": "^1.0.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^15.0.2",
        "@anolilab/prettier-config": "^5.0.13",
        "@anolilab/semantic-release-preset": "^8.0.2",
        "@babel/core": "^7.23.5",
        "@eslint-types/deprecation": "^2.0.0",
        "@eslint-types/import": "^2.29.0",
        "@eslint-types/jsdoc": "^46.9.0",
        "@eslint-types/typescript-eslint": "^6.12.0",
        "@eslint-types/unicorn": "^49.0.0",
        "@rushstack/eslint-plugin-security": "^0.7.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/command-line-args": "^5.2.3",
        "@types/node": "18.18.5",
        "@types/wordwrap": "^1.0.3",
        "@visulima/nextra-theme-docs": "workspace:*",
        "@vitest/coverage-v8": "^1.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.55.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.0",
        "eslint-plugin-mdx": "^2.2.0",
        "eslint-plugin-vitest": "^0.3.10",
        "eslint-plugin-vitest-globals": "^1.4.0",
        "mock-stdin": "1.0.0",
        "prettier": "^3.1.0",
        "rimraf": "^5.0.5",
        "semantic-release": "^22.0.10",
        "sort-package-json": "^2.6.0",
        "temp-write": "^5.0.0",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "vitest": "^1.0.2",
        "vitest-console": "0.1.1"
    },
    "engines": {
        "node": ">=18.* <=21.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "anolilab": {
        "eslint-config": {
            "plugin": {
                "tsdoc": false,
                "etc": false
            },
            "warn_on_unsupported_typescript_version": false,
            "info_on_disabling_jsx_react_rule": false,
            "info_on_disabling_prettier_conflict_rule": false,
            "info_on_disabling_jsonc_sort_keys_rule": false,
            "info_on_disabling_etc_no_deprecated": false
        }
    }
}
