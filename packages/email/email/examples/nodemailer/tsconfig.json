{
    "extends": "../../../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "module": "ESNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules", "dist"]
}

