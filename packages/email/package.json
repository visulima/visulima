{
    "name": "@visulima/email",
    "version": "0.0.0",
    "description": "Email sending package with multiple provider support",
    "keywords": [
        "visulima",
        "email",
        "mail",
        "smtp",
        "resend",
        "aws-ses",
        "zeptomail",
        "http"
    ],
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "homepage": "https://visulima.com/packages/email",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/visulima.git",
        "directory": "packages/email"
    },
    "bugs": {
        "url": "https://github.com/visulima/visulima/issues"
    },
    "scripts": {
        "build": "packem build --development",
        "build:prod": "packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:attw": "attw --pack",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:package-json": "publint --strict",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "engines": {
        "node": ">=20.19 <=25.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "dependencies": {
        "mime": "^4.0.4",
        "nodemailer": "^6.9.16"
    },
    "devDependencies": {
        "publint": "^0.3.12",
        "@anolilab/eslint-config": "^16.2.4",
        "@anolilab/semantic-release-pnpm": "1.1.11",
        "@anolilab/semantic-release-preset": "^10.0.5",
        "@arethetypeswrong/cli": "^0.18.1",
        "@secretlint/secretlint-rule-preset-recommend": "^9.3.3",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/mime": "^3.0.4",
        "@types/node": "22.15.27",
        "@types/nodemailer": "^6.4.14",
        "@visulima/packem": "2.0.0-alpha.30",
        "@vitest/coverage-v8": "^3.1.4",
        "@vitest/ui": "^3.1.4",
        "conventional-changelog-conventionalcommits": "9.0.0",
        "esbuild": "^0.25.5",
        "eslint": "9.27.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "secretlint": "9.3.3",
        "semantic-release": "^24.2.5",
        "typescript": "^5.8.3",
        "vitest": "^3.1.4"
    }
}
