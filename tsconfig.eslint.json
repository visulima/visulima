{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "."
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.cjs",
        "**/*.mjs",
        "plopfile.js"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules/**/*",
        "build/**/*",
        "scripts/setup-git-hooks.js",
        "verify-node-version.js",
        ".nx/**/*",
        ".history/**/*"
    ]
}
