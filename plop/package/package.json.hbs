{
    "name": "@visulima/{{packageName}}",
    "version": "0.0.0",
    "description": "{{description}}",
    "keywords": [
        "visulima",
        "{{packageName}}"
    ],
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "homepage": "https://visulima.com/packages/{{packageName}}",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            },
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            }
        },
        "./package.json": "./package.json"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "browser": "./dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/visulima.git",
        "directory": "packages/{{packageName}}"
    },
    "bugs": {
        "url": "https://github.com/visulima/visulima/issues"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=development packem build",
        "build:prod": "cross-env NODE_ENV=production packem build",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:package-json": "publint --strict",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "engines": {
        "node": ">=20.19 <=24.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "devDependencies": {
        "publint": "^0.3.12",
        "@anolilab/eslint-config": "^16.2.4",
        "@anolilab/semantic-release-pnpm": "1.1.11",
        "@anolilab/semantic-release-preset": "^10.0.5",
        "@arethetypeswrong/cli": "^0.18.1",
        "@babel/core": "^7.27.3",
        "@secretlint/secretlint-rule-preset-recommend": "^9.3.3",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "22.15.27",
        "@visulima/packem": "^1.19.4",
        "@vitest/coverage-v8": "^3.1.4",
        "@vitest/ui": "^3.1.4",
        "conventional-changelog-conventionalcommits": "9.0.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.25.5",
        "eslint": "9.27.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "secretlint": "9.3.3",
        "semantic-release": "^24.2.5",
        "typescript": "^5.8.3",
        "vitest": "^3.1.4"
    }
}
